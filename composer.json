{
    "require": {
        "sincco/sfphp": "dev-master",
        "sincco/tokenizer": ">=1.0",
        "sincco/login": "dev-master",
        "sincco/elastic-email": ">=1.0",
        "sincco/excell": ">=1.0",
        "sincco/gantt": "dev-master",
        "fbourigault/composer-mkdir": "^2.0"
    },
    "scripts": {
        "post-install-cmd": [
            "Fbourigault\\ComposerMkdir\\ScriptHandler::mkdirs"
        ],
        "post-update-cmd": [
            "Fbourigault\\ComposerMkdir\\ScriptHandler::mkdirs"
        ]
    },
    "extra": {
        "fbourigault-composer-mkdir": [
            "app/Controllers",
            "app/Models",
            "app/Views",
            "app/Helpers",
            "var/cache",
            "var/session",
            "var/log",
            "var/tmp",
            "etc/config",
            "etc/local",
            "bkp",
            "_proyectos"
        ]
    }
}
